{
  "manifest_version": 2,
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "browser_action": {
    "default_icon": "assets/icon19.png"
  },
  "background": {
     "scripts": ["js/background.js"],
     "persistent": false
  },
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js": [ "js/content.js" ]
  }],
  "permissions": [ "<all_urls>" ],
  "web_accessible_resources": [ "js/*", "html/*", "css/*", "assets/*" ]
}
